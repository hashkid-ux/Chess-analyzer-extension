{
  "manifest_version": 3,
  "name": "Chess Smart Analyzer Pro",
  "version": "2.0.0",
  "description": "Advanced chess analysis with multi-engine support, auto-move, and humanized gameplay for Chess.com & Lichess",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.chess.com/*",
    "*://*.lichess.org/*",
    "https://stockfish.online/*",
    "https://lichess.org/*",
    "https://www.chessdb.cn/*",
    "https://chess-api.com/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chess.com/*",
        "*://*.lichess.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["analyzer.js"],
      "matches": [
        "*://*.chess.com/*",
        "*://*.lichess.org/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}